# Maintainer: <loongarmz@gmail.com>
pkgname=longarmz-desktop
pkgver=0.0.6
pkgrel=1
pkgdesc="desktop configuration for longarmz systems"
arch=('any')
url="https://github.com/longarmz/arch-pkgs/pkg/desktop/"
license=('MIT')

install=longarmz-desktop.install

#bare bones
depends=(
	arandr discord dmenu i3-gaps i3blocks i3lock i3status firefox feh neofetch 
	network-manager-applet pavucontrol pulseaudio-alsa picom redshift rxvt-unicode 
	ttf-font-awesome ttf-iosevka xorg-server xorg-xinit xorg-xrandr zathura 
	zathura-pdf-mupdf
)
rootdir=$PWD

package (){
	cp -a "$rootdir/files/"* "$pkgdir"
}
